<script src="/Theme/assets/jquery-1.12.4.min.js"></script>
    <script>
        $(function ()
        {
            ActiveTab();
        });
            $("#btnsendemail").click(function () {
            var Name = $("#txtName").val();
            var Email = $("#txtEmail").val();
            var PhoneNumber = $("#txtPhnumber").val();
            var Subject = $("#txtSubject").val();
            var  Message= $("#txtMessage").val();
            if (Name == "" || Email == "" || PhoneNumber == "" || Subject == "" || Message == "") {
                alert("All Fields are required")
                return;
            }
            if (!ValidateEmail(Email)) {
                alert('Not a valid email');
                return;
            }
            $.ajax({
                type: "POST",
                contentType: "application/json; charset=utf-8",
                url: "/Home/SendEmail",
                data: JSON.stringify({ Name: Name, Email: Email, PhoneNumber: PhoneNumber, Subject: Subject, Message: Message }),
                dataType: "Json",
                success: function (response) {
                    alert(response);
                },
                error: function (response) {
                    alert("Email not Sent.");
                }
            });
        });
        function ValidateEmail(email) {
            // Validate email format
            var expr = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
               return expr.test(email);
        };
        $("#txtPhnumber").keypress(function (e) {
            if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                return false;
            }
        });
        function ActiveTab() {
            $(".tabs").removeClass("current");
            $("#tabcontact").addClass("current");
        }
    </script>

