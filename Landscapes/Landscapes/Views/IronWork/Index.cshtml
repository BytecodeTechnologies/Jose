</section>
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script>

    $(document).ready(function() {
        GetIronWorkCategories();
    
    })
        function GetIronWorkCategories() {
            $.ajax({
                type: "POST",
                url: "/Ironwork/GetCategories",
                dataType: "Html",
                success: function (response) {
                    $("#categoriesshow").append(response);
                },
                error: function (response) {
                }
            });
        }


</script>
