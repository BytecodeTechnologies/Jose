@model IEnumerable<Landscapes.Models.SubCategory>

@*<table id="tblSub">*@
<link href="~/Scripts/DataTable/bootstrap.min.css" rel="stylesheet" />
<link href="~/Scripts/DataTable/dataTables.bootstrap.min.css" rel="stylesheet" />
<table id="tblSub" class="table table-striped table-bordered" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th>Image</th>
            <th>SubCategory</th>
            <th>Category</th>
            <th>Description</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
            <tr>
                <td>
                    <img src="@item.Image"/></td>
                <td>@item.Subcategory</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td><a style="cursor:pointer" onclick="DeleteSubactegory(@item.SubCategoryId)">Delete</a></td>
                <td><a style="cursor:pointer" onclick="EditSubcategory(@item.SubCategoryId)">Edit</a></td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Scripts/DataTable/jquery-1.12.3.js"></script>
<script src="~/Scripts/DataTable/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTable/dataTables.bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tblSub').DataTable();
    });
</script>


