@{
    ViewBag.Keywords = "Driving under the Influence of Alcohol, Drunk Driving in New Jersey, DUI New Jersey";
    ViewBag.Description = "Dealing with a DUI is not an easy task. It demands an experienced Defense Lawyer to tackle such cases. Contact best lawyers to get the best possible help!";
    ViewBag.Title = "Driving Under the Influence of Alcohol | DUI New Jersey";
    Layout = "/Views/Shared/_LayoutResources.cshtml";
}

<div class="tab-content dui-tab-content" id="myTabContent">

    <div class="tab-pane fade in active" role="tabpanel" id="Driving-Under-the-Influence-of-Alcohol" aria-labelledby="profile-tab">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="resourse-left-side">
                <h1 class="hdnh1">Driving Under the Influence of Alcohol</h1>
                <h3>Driving Under the Influence of Alcohol</h3>
                <p>
                    A person who drives a motor vehicle with a BAC (blood alcohol concentration) 
                            of 0.08% or above is treated to be driving under the influence.
                </p>
                <h4>First Offense in NJ</h4>
                <ul>
                    <li>$600-$1,000 fine</li>
                    <li>1 to 2 years driving license suspension</li>
                    <li>12 hours minimum IDRC</li>
                </ul>
            </div>

            <div class="resourse-left-side">
                <h4 class="sec">Second Offense in NJ</h4>
                <ul>
                    <li>$1,000-$2,000 fine</li>
                    <li>4 years driving license suspension</li>
                    <li>12 hours minimum IDRC</li>

                </ul>
            </div>
            <div class="resourse-left-side">
                <h4 class="sec">Third and Subsequent Offenses in NJ</h4>
                <ul>
                    <li>$2,000 fine</li>
                    <li>12 hours minimum IDRC</li>
                    <li>20 years driving license suspension</li>
                </ul>
            </div>
            <div class="resource-right-side">
                <img src="/images/dui-resource3.jpg" alt="Driving Under the Influence of Alcohol">
            </div>
        </div>
    </div>
</div>

