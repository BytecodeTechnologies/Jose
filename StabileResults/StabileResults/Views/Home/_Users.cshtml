@model IEnumerable<StabileResults.Models.User>

<link href="~/Scripts/DataTable/bootstrap.min.css" rel="stylesheet" />
<link href="~/Scripts/DataTable/dataTables.bootstrap.min.css" rel="stylesheet" />

<table id="tblResult" class=" table table-striped table-bordered" cellspacing="0" width="100%">

    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Password</th>
            <th>UserRole</th>
            <th>Edit</th>
            <th>Delete</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td>@item.Role</td>
                <td><a style="cursor:pointer" onclick="EditUser(@item.UserId)">Edit</a></td>
                <td><a style="cursor:pointer" onclick="DeleteUser(@item.UserId)">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Scripts/DataTable/jquery-1.12.3.js"></script>
<script src="~/Scripts/DataTable/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTable/dataTables.bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tblResult').DataTable();
    });
</script>
